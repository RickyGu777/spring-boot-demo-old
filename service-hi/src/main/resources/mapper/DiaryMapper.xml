<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.servicehi.dao.DiaryDao">
    <resultMap id="DiaryResult" type="com.example.servicehi.entity.Diary">
        <result column="UUID" property="uuid"/>
        <result column="TITLE" property="title"/>
        <result column="TEXT" property="text"/>
        <result column="IS_DEL" property="isDel"/>
        <result column="STATUS" property="status"/>
        <result column="CREATE_USER_UUID" property="createUserUUID"/>
        <result column="CREATE_DATE" property="createDate"/>
        <result column="MODI_USER_UUID" property="modiUserUUID"/>
        <result column="MODI_DATE" property="modiDate"/>
    </resultMap>

    <insert id="insert" parameterType="Diary">
        insert into DIARY (UUID, TITLE, TEXT, IS_DEL, STATUS, CREATE_USER_UUID, CREATE_DATE, MODI_USER_UUID, MODI_DATE)
        values (#{uuid},#{title},#{text},#{isDel},#{status},#{createUserUUID},#{createDate},#{modiUserUUID},#{modiDate})
    </insert>

    <select id="selectDiaryList" parameterType="Diary" resultMap="DiaryResult">
        select * from DIARY order by CREATE_DATE desc
    </select>

    <select id="selectByUUID" parameterType="Diary" resultMap="DiaryResult">
        select * from DIARY where UUID = #{uuid};
    </select>

    <update id="updateDiaryByUUID" parameterType="Diary">
        update DIARY set
        TITLE = #{title},
        TEXT = #{text},
        MODI_DATE = #{modiDate}
        where UUID = #{uuid}
    </update>
</mapper>